{
	"imports": {
		"modules/": "./modules/",
		"modules/database": "./modules/database/index.js",
		"modules/server": "./modules/server/index.js",
		"modules/schemas/user": "./modules/schemas/user/index.js",
		"modules/schemas/unit": "./modules/schemas/unit/index.js",
		"modules/schemas/event": "./modules/schemas/event/index.js",

		"mongoose": "npm:mongoose@9.0.0",
		"cli": "jsr:@std/cli",
		"csv": "jsr:@std/csv",
		"mime": "npm:mime",
		"aaguid.json": "https://raw.githubusercontent.com/passkeydeveloper/passkey-authenticator-aaguids/refs/heads/main/aaguid.json"
	},
	"lint": {
		"rules": {
			"exclude": ["no-unused-vars", "no-control-regex"]
		}
	},
	"permissions": {
		"default": {
			"env": true,
			"net": ["localhost", "localhost:27017"],
			"sys": ["osRelease"],
			"read": ["."]
		}
	},
	"tasks": {
		"start": "deno -P --env-file --no-prompt index.js",
		"start-dev": "deno --inspect --watch -P --env-file --no-prompt index.js --development"
	}
}