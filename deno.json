{
	"imports": {
		"modules/": "./modules/",
		"modules/database": "./modules/database/index.js",
		"modules/server": "./modules/server/index.js",

		"mongoose": "npm:mongoose@8.12.1"
	},
	"lint": {
		"rules": {
			"exclude": ["no-unused-vars", "no-control-regex"]
		}
	},
	"tasks": {
		"start": "deno --allow-env --allow-read --allow-sys --allow-net --no-prompt --unstable-temporal index.js",
		"start_watcher": "deno --allow-env --allow-read --allow-sys --allow-net --no-prompt --unstable-temporal --watch index.js",
		"clear_database": "deno --allow-env --allow-read --allow-sys --allow-net --no-prompt --unstable-temporal index.js --clear-database"
	}
}